<!--pages/upload/index.wxml-->
<van-grid column-num="3">
  <van-grid-item bind:click="select" data-Index="{{index}}" use-slot wx:for="{{ 40 }}" wx:for-item="index">
    <image style="width: 100%; height: 90px;" src="cloud://cloud1-6gyk321306fd5b0f.636c-cloud1-6gyk321306fd5b0f-1311839739/foods/{{ index + 1 }}.png" />
    <view class="title">名称xxxxxx{{index + 1}}</view>
    <view class="price">
      <span>￥20</span>
      <van-tag type="warning">素菜</van-tag>
    </view>
  </van-grid-item>
</van-grid>
<!-- 添加 -->
<view class="add">
  <van-button icon="plus" bindtap="add" round type="danger"></van-button>
</view>