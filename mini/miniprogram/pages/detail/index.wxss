/* pages/detail/index.wxss */
.lists {
  overflow-y: scroll;
}

.lists .item {
  display: flex;
  flex-direction: row;
  width: 720rpx;
  margin: 20rpx auto;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}

.lists .item .img {
  display: flex;
  justify-items: center;
}

.lists .item image {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
}

.lists .item .content {
  width: 520rpx;
}

.bottom {
  display: flex;
  flex-direction: row-reverse;
  justify-content: right;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}

.bottom .item {
  /* width: 200rpx; */
  height: 100rpx;
  line-height: 100rpx;
  background: #94EC94;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  color: #fff;
  font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
}

.bottom .item image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 10rpx 0 0;
}